rem(p)
  $rem=750/10
  return p/($rem) rem

clearFix()
  &::after
    content ''
    display overflow
    clear  both

border-1px($color)
  &::after
     content''
     display block
     width rem(750)
     height rem(1)
     background $color
     position relative
     @media screen and (-webkit-device-pixel-raxio:2)
       transform scaleY(.5)
     @media screen and (-webkit-device-pixel-raxio:3)
        transform scaleY(.33333333)



borderColorPx($color)
  border-top rem(15) $color solid
  border-bottom rem(15) #d3d3d3 solid
  margin-top rem(10)
  margin-bottom rem(10)
